<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maryjean.wildcatbank.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tabFragment"
        android:layout="@layout/fragment_tab"
        android:name="com.example.maryjean.wildcatbank.tab"
        tools:layout="@layout/fragment_tab"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.maryjean.wildcatbank.accounts"
        android:id="@+id/fragment"
        android:layout_below="@+id/tabFragment"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/accounts" />
</RelativeLayout>
